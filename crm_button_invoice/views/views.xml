<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_case_form_view_oppor_invoice" model="ir.ui.view">
            <field name="name">crm.lead.oppor.inherited.crm</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
               
                <button name="action_schedule_meeting" position="after">
                    <button class="oe_stat_button" type="object"
                     name="action_view_sale_invoice" icon="fa-usd">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value">
                                <field name="total_invoicedc" widget="statinfo" options="{'currency_field': 'currency_id'}"/>
                                <field name="sale_order_count" invisible="1"/>
                            </span>
                            <span class="o_stat_text">Invoiced</span>
                        </div>
                    </button>
                </button>
            </field>
        </record>

</odoo>